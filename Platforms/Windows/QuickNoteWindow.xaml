<Window
    x:Class="Timeline_Note_Taker.Platforms.Windows.QuickNoteWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Quick Note">
    
    <Grid Background="{ThemeResource SystemControlAcrylicWindowBrush}" 
          Padding="20"
          BorderBrush="{ThemeResource SystemControlForegroundAccentBrush}"
          BorderThickness="2"
          CornerRadius="8">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Quick Note (Win+Shift+N) • #topic or #&quot;topic with spaces&quot; • Shift+Enter for new line • Enter to save • Esc to close"
                   FontSize="11"
                   Opacity="0.7"
                   Margin="0,0,0,10"/>

        <TextBox x:Name="InputTextBox"
                 Grid.Row="1"
                 PlaceholderText="Type your note or paste content..."
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 FontSize="16"
                 VerticalAlignment="Stretch"
                 PreviewKeyDown="InputTextBox_PreviewKeyDown"
                 Paste="InputTextBox_Paste"/>
    </Grid>
</Window>
